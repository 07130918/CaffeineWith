<div class="devise-cover">
  
  <h2>ログイン</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if alert %>
        <p class='alert'><%= alert %></p>
      <% end %>
      
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "minifield" %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "minifield" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン情報を記録する %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "ログイン", class: "logsign" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>