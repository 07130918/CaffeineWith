<% provide :title, " | サインアップ" %>
<div class="devise-cover sign_up_cover">
  <div class="devise-card">
    <h2>新規登録</h2>
    <h4>※イメージ画像以外必須です</h4>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :メールアドレス, class: "field_text" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "minifield" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード, class: "field_text" %>
        <% if @minimum_password_length %>
        <em class="field_text">(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "minifield" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード（確認）, class: "field_text" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "minifield" %>
      </div>
      
      <div class="field">
        <%= f.label :ニックネーム, class: "field_text" %><br />
        <%= f.text_field :nickname, class: "minifield" %>
      </div>
      
      <div class="field">
        <%= f.label :プロフィール画像, class: "field_text" %><br />
        <%= f.file_field :image, class: "minifield" %>
      </div>
    
      <div>
        <%= f.submit "新規登録", class: "devise_btn" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>  
