<div class="cover">
    <div class="sheet">
        <%= form_for [@caffe, @log] do |f| %>
            <p><%= @caffe.store %>で<%= @caffe.size %>サイズのコーヒーを飲むことを記録します!</p>
            <%= f.text_area :text, placeholder: "コーヒーを飲んだ時の感想,思いついたことなど自由に書き込んでみましょう!", class: "text-area" %>
            <div class="newbtnwrapp">
                <%= f.submit "記録する", class: "newbtn" %>
            </div>
        <% end %>
    </div>
</div>